        <div class='menu'>
          <a class='menu-item' href='/#/tunnels'>Tunnels</a>
          <a class='menu-item' href='/#/tokens'>Tokens</a>
          <a class='menu-item active-tab' href='/#/ssh-keys'>SSH Keys</a>
          {{if .IsAdmin}}
